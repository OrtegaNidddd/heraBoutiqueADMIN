<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hera Admin</title>
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/clientes.css">
    <script src="https://kit.fontawesome.com/a1ddf57449.js" crossorigin="anonymous"></script>
</head>
<body>
    <header id="nav">
        <h1>CLIENTES</h1>
    </header>
    <main>
        <div id="buttons">
            <button onclick="actualizar()" class="primaryButton">ACTUALIZAR</button>
            <button onclick="volver()" class="primaryButton">VOLVER</button>
        </div>
        <table border="1">
            <thead>
                <th>ID</th>
                <th>NOMBRES</th>
                <th>APELLIDOS</th>
                <th>TELEFONO</th>
                <th>EMAIL</th>
                <th>CIUDAD</th>
                <th>GENERO</th>
                <th>CUMPLEAÃ‘OS</th>
                <th>CEDULA</th>
            </thead>
            <tbody>
                <% resultado.forEach((cliente) => { %>
                    <tr>
                        <td><%= cliente.idcliente %></td>
                        <td><%= cliente.nombres %></td>
                        <td><%= cliente.apellidos %></td>
                        <td><%= cliente.telefono %></td>
                        <td><%= cliente.email %></td>
                        <td><%= cliente.ciudad %></td>
                        <td><%= cliente.genero %></td>
                        <td><%= cliente.cumpleanos %></td>
                        <td><%= cliente.cedula %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>
    <script src="../js/script.js"></script>
</body>
</html>